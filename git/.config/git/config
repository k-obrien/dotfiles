[include]
    path = ~/.config/git/config.local

[user]
    name = Kieran O'Brien

[core]
    autocrlf = input
    editor = codium --wait
    pager = delta

[url "ssh://git@github.com/"]
    pushInsteadOf = https://github.com/

[init]
    defaultBranch = main

[status]
    submoduleSummary = true

[log]
    date = iso

[submodule]
    recurse = true

[fetch]
    prune = true

[pull]
    rebase = true

[commit]
    gpgSign = true

[push]
    autoSetupRemote = true
    useForceIfIncludes = true

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed_signers

[diff]
    algorithm = histogram
    colorMoved = default
    tool = vscodium
    submodule = diff

[difftool]
    prompt = false

[difftool "vscodium"]
    cmd = codium --wait --diff "$LOCAL" "$REMOTE"

[delta]
    navigate = true
    side-by-side = true
    hyperlinks = true
    map-styles = bold purple => syntax magenta, bold cyan => syntax blue

[merge]
    conflictStyle = zdiff3
    tool = vscodium

[mergetool]
    prompt = false

[mergetool "vscodium"]
    cmd = codium --wait --merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
    trustExitCode = true

[rebase]
    autoStash = true
    autoSquash = true
    updateRefs = true

[absorb]
    maxStack = 50

[alias]
    alias = "!git config -l | grep alias | cut -c 7-"
    ec = config --global -e
    st = status -s
    last = log -1 HEAD
    hist = log -u
    ls = log --pretty=format:'%Cred%h%Creset - %s - %Cblue%an%Creset (%Cgreen%ch%Creset)'
    ll = ls --numstat
    staged = diff --staged
    clone-sub = submodule update --init --recursive
    br = branch
    co = checkout
    newb = co -b
    ci = commit -am
    ca = "!git add -A && git commit -m"
    ac = commit --amend --no-edit -a
    acm = commit --amend -am
    pushf = push --force-with-lease
    uncommit = reset HEAD~
    unstage = restore --staged
    untrack = rm --cached
    skip = update-index --skip-worktree
    noskip = update-index --no-skip-worktree
    sls = stash list
    spop = stash pop
    sshow = stash show -p
    default-branch = !git symbolic-ref refs/remotes/origin/HEAD --short 
    branches = for-each-ref refs/heads --sort=committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:human)%(color:reset))'
    merged = !git fetch -q && git branch --merged "$(git default-branch)" | grep -v "$(git default-branch)" | grep -v "$(git symbolic-ref --short HEAD)" | grep -v "+" | xargs
    cull = !git merged | xargs git branch -d
    burn = !git merged | xargs git branch -D
    absorb = !git-absorb
